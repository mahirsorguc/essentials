{
  "ConnectionStrings": {
    "Default": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Enabled": true,
    "MinimumLevel": "Information",
    "WriteToConsole": true,
    "WriteToFile": true,
    "LogFilePath": "Logs/log-.txt",
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 31,
    "FileSizeLimitBytes": 10485760,
    "EnrichWithMachineName": true,
    "EnrichWithThreadId": true,
    "EnrichWithEnvironmentName": true,
    "OverrideMinimumLevel": true,
    "MinimumLevelOverrides": {
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Swagger": {
    "EnableSwaggerUI": true,
    "EnableInProduction": false,
    "Title": "HMS Main Application API",
    "Version": "v1",
    "Description": "HMS Main Application REST API Documentation",
    "ContactName": "HMS Development Team",
    "ContactEmail": "dev@hms.com",
    "IncludeXmlComments": true,
    "RoutePrefix": "swagger",
    "EnableAnnotations": true,
    "EnableDeepLinking": true,
    "DisplayOperationId": true,
    "DisplayRequestDuration": true,
    "DefaultModelsExpandDepth": 1,
    "DefaultModelExpandDepth": 1
  }
}

